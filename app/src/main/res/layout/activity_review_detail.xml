<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffaf43"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ffffaf43"
            android:visibility="visible"
            app:srcCompat="@drawable/back_arrow" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffaf43"
            android:gravity="center"
            android:text="장소 정보"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/menu_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ffffaf43"
            app:srcCompat="@drawable/menu" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:paddingLeft="20dp"
                        android:text="장소 이름"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/tag_done_1"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/restroom_dimmed" />

                <ImageView
                    android:id="@+id/tag_done_2"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/parking_dimmed" />

                <ImageView
                    android:id="@+id/tag_done_3"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/elevator_dimmed" />

                <ImageView
                    android:id="@+id/tag_done_4"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/slope_dimmed" />

                <ImageView
                    android:id="@+id/tag_done_5"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/table_dimmed" />

                <ImageView
                    android:id="@+id/tag_done_6"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/assistant_dimmed" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:isIndicator="true"
                android:numStars="5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/black_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/black_marker" />

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5"
                    android:paddingRight="10dp"
                    android:text="도로명 주소"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/telephone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/telephone_number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5"
                    android:paddingRight="10dp"
                    android:text="전화번호"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/review_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/review_icon" />

                <Button
                    android:id="@+id/review_b"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="#00ffffff"
                    android:gravity="top|bottom|left"
                    android:text="장소 등록하기"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/review_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/review_line" />

            <ListView
                android:id="@+id/short_review_list"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scrollbars="none" />

            <ImageButton
                android:id="@+id/reviewmore_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/see_button" />

            <ImageView
                android:id="@+id/blog_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/blog_line" />

            <ListView
                android:id="@+id/short_blog_list"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scrollbars="none" />

            <ImageButton
                android:id="@+id/blogmore_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/see_button" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>